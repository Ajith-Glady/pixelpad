   <style>
      .page-not-found {
         background-color: #3f51b5;
         height: 100vh;
      }

      .page-not-found h2 {
         font-size: 130px;
         color: #e91e63;
      }

      .page-not-found h3 {
         font-size: 42px;
      }

      .page-not-found .bg-light {
         width: 50%;
         padding: 50px;
         text-align: center;
         border-radius: 5px;
         position: absolute;
         top: 50%;
         left: 50%;
         transform: translate(-50%, -50%);
      }

      @media (max-width: 767px) {
         .page-not-found h2 {
            font-size: 100px;
         }

         .page-not-found h3 {
            font-size: 28px;
         }

         .page-not-found .bg-light {
            width: 100%;
         }
      }
   </style>
</head>

